let selectedHotel = "";
const hotelList = document.getElementById("hotelList");

function displayHotels(list) {
  hotelList.innerHTML = "";
  list.forEach((hotel) => {
    hotelList.innerHTML += `
      <div class="hotel-card">
        <img src="${hotel.image}" onerror="this.src='${defaultImage}'">
        <h3>${hotel.name}</h3>
        <p>${hotel.place}</p>
        <button onclick="openBooking('${hotel.name}')">Book Now</button>
      </div>
    `;
  });
}

displayHotels(hotelsData);

function filterHotels() {
  const city = document.getElementById("cityFilter").value;
  if (city === "All") {
    displayHotels(hotelsData);
  } else {
    displayHotels(hotelsData.filter(h => h.place === city));
  }
}

function openBooking(hotelName) {
  selectedHotel = hotelName;
  document.getElementById("bookingBox").style.display = "block";
  document.getElementById("bookingHotelName").innerText = hotelName;
}

function confirmBooking() {
  const days = document.getElementById("daysInput").value;
  if (!days || days <= 0) return;

  alert("Booking Confirmed\nHotel: " + selectedHotel + "\nDays: " + days);

  document.getElementById("daysInput").value = "";
  document.getElementById("bookingBox").style.display = "none";
}
